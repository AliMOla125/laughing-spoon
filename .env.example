# Perplexity AI Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google Cloud / Vertex AI Configuration
# Option A: Using Service Account (recommended for production)
# Set GOOGLE_APPLICATION_CREDENTIALS to path of your service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT=your-gcp-project-id
GCP_LOCATION=us-central1
VERTEX_ENDPOINT_ID=your-vertex-endpoint-id

# Option B: Using API Key for REST calls
VERTEX_REST_URL=https://us-central1-aiplatform.googleapis.com/v1/projects/PROJECT/locations/LOCATION/publishers/google/models/MODEL:predict
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
